<nav class="navbar" aria-label="primary navigation">
    <a class="brand" href="{{ "/" | locale_url }}" aria-label="{{ meta.siteName }} - Hem">{{ meta.siteName }}</a>
    <ul role="list">
        {% for item in collections.pages | reverse %}
        <li>
            <a class="{{ 'active' if item.url == page.url }}" href="{{ item.url | locale_url }}">{{ item.data.title }}</a>
        </li>
        {% endfor %}
    </ul>
</nav>